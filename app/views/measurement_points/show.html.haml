.mx-auto.w-full.flex{:class => "md:w-2/3"}
  .mx-auto
    - if notice.present?
      %p#notice.py-2.px-3.bg-green-50.mb-5.text-green-500.font-medium.rounded-lg.inline-block= notice
    = render @measurement_point
    = link_to "Edit this measurement point", edit_measurement_point_path(@measurement_point), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium"
    = link_to "Back to measurement points", measurement_points_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium"
    .inline-block.ml-2
      = button_to "Destroy this measurement point", @measurement_point, method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium"
